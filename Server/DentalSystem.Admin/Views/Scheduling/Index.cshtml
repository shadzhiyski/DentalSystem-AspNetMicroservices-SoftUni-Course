@model IEnumerable<TreatmentSessionViewItemOutputModel>

@{
    ViewData["Title"] = "All treatment sessions";
}

<div class="row">
    <div class="col-lg-4">
        <h2>All treatment sessions</h2>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Patient</th>
            <th scope="col">Dental Team</th>
            <th scope="col">Treatment</th>
            <th scope="col">End</th>
            <th scope="col">Start</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var treatmentSession in Model)
        {
            <tr>
                <td>@treatmentSession.PatientEmail</td>
                <td>@treatmentSession.DentalTeamName</td>
                <td>@treatmentSession.TreatmentName</td>
                <td>@treatmentSession.Start</td>
                <td>@treatmentSession.End</td>
                <td>@treatmentSession.Status</td>
            </tr>
        }
    </tbody>
</table>